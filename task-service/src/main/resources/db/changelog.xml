<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="init-tables" author="oli">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createIndex indexName="users_idx_email" tableName="users">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="init-token" author="oli">
        <createTable tableName="tokens">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_tokens_users" references="users(id)" />
            </column>
            <column name="jwt" type="varchar">
                <constraints nullable="false" />
            </column>
            <column name="revoked" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="expired" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-tasks" author="oli">
        <createTable tableName="tasks">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="title" type="varchar">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar" />
            <column name="creation_date" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="deadline" type="timestamp"/>
            <column name="completion_date" type="timestamp" />
        </createTable>
    </changeSet>

    <changeSet id="change-data-type" author="oli">
        <modifyDataType  columnName="creation_date"
                         newDataType="timestamp(6) with time zone"
                         schemaName="public"
                         tableName="tasks"/>
        <modifyDataType  columnName="deadline"
                         newDataType="timestamp(6) with time zone"
                         schemaName="public"
                         tableName="tasks"/>
        <modifyDataType  columnName="completion_date"
                         newDataType="timestamp(6) with time zone"
                         schemaName="public"
                         tableName="tasks"/>
    </changeSet>
</databaseChangeLog>
