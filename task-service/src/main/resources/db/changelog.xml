<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="init-tasks" author="oli">
        <createTable tableName="tasks">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="title" type="varchar">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar" />
            <column name="creation_date" type="timestamp(6) with time zone">
                <constraints nullable="false" />
            </column>
            <column name="deadline" type="timestamp(6) with time zone"/>
            <column name="completion_date" type="timestamp(6) with time zone" />
            <column name="clientId" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <createTable tableName="user_ids">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="task_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_ids_tasks" references="tasks(id)" />
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <addUniqueConstraint tableName="user_ids"
                             columnNames="task_id, user_id"
                             constraintName="unique_task_id_user_id" />
    </changeSet>
</databaseChangeLog>
